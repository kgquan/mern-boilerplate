{
  "name": "mern-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for a MERN app.",
  "main": "server/index.js",
  "scripts": {
    "build": "tsc",
    "build:w": "tsc -w",
    "server": "cross-env NODE_ENV=development node server/server.js",
    "start": "concurrently \"npm run build\" \"npm run server\"",
    "test": "cross-env NODE_ENV=testing jest --detectOpenHandles"
  },
  "author": "Kevin Quan",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.28"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/config": "0.0.36",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.8",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/supertest": "^2.0.10",
    "concurrently": "^5.2.0",
    "config": "^3.3.1",
    "cross-env": "^7.0.2",
    "jest": "^26.2.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.4",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  }
}
